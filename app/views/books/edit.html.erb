<div class="container">
  <div id="error_explanation">
    <%= render 'layouts/error', book: @book %>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class:'btn btn-success' %>
        </div>
      <% end %>
      <span>
        <%= link_to 'Show', book_path(@book) %> | <%= link_to 'Back', books_path %>
      </span>
    </div>
  </div>
</div>
